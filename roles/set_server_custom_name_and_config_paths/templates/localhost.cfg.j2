}

define service {
    use                     local-service
    host_name               {{ nagios_hostname }}
    service_description     Swap Usage
    check_command           check_local_swap!{{ nagios_swap_warning }}!{{ nagios_swap_critical }}
}

define service {
    use                     local-service
    host_name               {{ nagios_hostname }}
    service_description     SSH
    check_command           check_ssh
